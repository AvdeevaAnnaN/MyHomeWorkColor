<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyHomeWorkColor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.MyHomeWorkColor.TextView</item>

    </style>



    <style name="Theme.MyHomeWorkColor.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/blue_1</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.MyHomeWorkColor.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/blue_1</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="Theme.MyHomeWorkColor.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">30sp</item>
    </style>

</resources>